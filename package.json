{
  "name": "sacware-kiosco",
  "version": "1.0.1",
  "description": "Sistema de Gesti√≥n Comercial para Kioscos",
  "private": true,
  "main": "electron-main.js",
  "author": "SAC Web Agency",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"vite\"",
    "server": "cd server && npm start",
    "build": "vite build",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:portable": "npm run build && electron-packager . SACWare-Kiosco --platform=win32 --arch=x64 --out=dist_electron --overwrite --asar --extra-resource=server",
    "lint": "eslint .",
      "preview": "vite preview",
      "postinstall": "electron-builder install-app-deps",
      "electron:build": "vite build && electron-builder"
    },
    "repository": {
    "type": "git",
    "url": "https://github.com/fabriimagnelli/kiosco-app.git"
  },
  "build": {
    "appId": "com.sacwebagency.kiosco",
    "productName": "SACWare Kiosco",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "electron-main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "server/",
        "to": "server/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "fabriimagnelli",
        "repo": "kiosco-app"
      }
    ],

    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "shortcutName": "SACWare Kiosco"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-updater": "^6.7.3",
    "express": "^4.18.2",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.7",
    "lucide-react": "^0.562.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "recharts": "^2.12.0",
    "sqlite3": "5.1.6"
  },
  "devDependencies": {
    "@jimp/core": "^1.6.0",
    "@jimp/png": "^0.22.12",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "24.8.8",
    "electron-builder": "^26.7.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.0"
  }
}
